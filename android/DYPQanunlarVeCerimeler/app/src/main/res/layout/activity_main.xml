<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background_shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.05" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.9"
                    android:gravity="bottom"
                    android:src="@drawable/splash_yazi" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.05" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/btnLow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/start_btn_height"
                    android:layout_marginBottom="@dimen/start_btn_margin"
                    android:layout_marginTop="@dimen/start_btn_margin"
                    android:background="@drawable/btn_main_selector"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:paddingBottom="@dimen/start_btn_padding"
                    android:paddingLeft="@dimen/start_btn_padding"
                    android:paddingRight="@dimen/start_btn_padding"
                    android:paddingTop="@dimen/start_btn_padding"
                    android:text="@string/btn_txt_low"
                    android:textColor="@color/btn_light_text_color"
                    android:textSize="@dimen/start_btn_txt_size" />

                <Button
                    android:id="@+id/btnPenal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/start_btn_height"
                    android:layout_marginBottom="@dimen/start_btn_margin"
                    android:layout_marginTop="@dimen/start_btn_margin"
                    android:background="@drawable/btn_main_selector"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:paddingBottom="@dimen/start_btn_padding"
                    android:paddingLeft="@dimen/start_btn_padding"
                    android:paddingRight="@dimen/start_btn_padding"
                    android:paddingTop="@dimen/start_btn_padding"
                    android:text="@string/btn_txt_penal"
                    android:textColor="@color/btn_light_text_color"
                    android:textSize="@dimen/start_btn_txt_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/admob"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="0dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivForkMeOnGithub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forkme_green"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/caution_background_color"
            android:orientation="vertical"
            android:paddingBottom="@dimen/general_padding_large"
            android:paddingLeft="@dimen/general_padding_large"
            android:paddingRight="@dimen/general_padding_large"
            android:paddingTop="@dimen/general_padding_large"
            android:gravity="center"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/general_padding_large"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/text_caution_title"
                    android:textColor="@color/caution_text_color"
                    android:textSize="@dimen/caution_txt_size" />

                <TextView
                    android:id="@+id/tvCautionDetailed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_caution_detailed"
                    android:textColor="@color/caution_text_color"
                    android:textColorLink="@color/btn_dark_color"
                    android:textSize="@dimen/item_sign_txt_size" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_caution"
                android:textColor="@color/caution_text_color"
                android:textSize="@dimen/item_sign_txt_size" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>